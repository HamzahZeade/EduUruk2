     $(document).on("click", '.SendSMS', function () {
         var id = $(this).data('id');
          swal.fire({
                   title: "تأكيد ارسال",
                   text: "تأكيد ارسال رسالة نصية للمستخدم",
                   icon: "warning",
                   showCancelButton: true,
                   buttons: 
                   {
                       cancel: {
                           text: "الغاء",
                           value: false,
                           visible: true,
                           className: "btn-warning",
                           closeModal: false,
                       },
                       confirm: {
                           text: "تأكيد ",
                           value: true,
                           visible: true,
                           className: "btn-success",
                           closeModal: false
                       }
                   }
               }).then(result => {
                   //debugger;
                   if (result.isConfirmed) {
                       $.ajax({
                            url: "../../../../../Admin/Users/SendSMS",
                            type: "POST",
                            dataType: "json",
                            data: {
                                id: id
                            },
                            success: function (data) {
                                  swal.fire({
                                        title: data.title,
                                        text: data.message,
                                        icon: data.status,
                                        type: data.status,
                                        confirmButtonClass: data.btnclass,
                                        confirmButtonText: data.btntext,
                                        showConfirmButton: 0,
                                        timer: 3000
                                        });
                            },
                            error: function (result) {
                                alert("عذرا ، هناك خطأ في النداء")
                            }
                        });
                   } else {
                   }
               })
