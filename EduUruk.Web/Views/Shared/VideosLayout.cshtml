        /* تغيير الظل */
        .nav-item:hover .nav-link {
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        aside {
            color: #fff;
            /* White text color */
            padding-left: 50px;
            max-width: 35%;
            /* Adjust width as needed */
        }

            aside h1 {
                font-size: 34px;
                color: black;
            }

                aside h1 span {
                    color: orange;
                    /* Highlighted text color */
                }

            aside p {
                font-size: 26px;
