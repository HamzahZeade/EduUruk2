@model EduUruk.Models.ViewModels.RoleForm
<!-- modal -->
<div id="AccessModal" class="modal fade"  data-bs-backdrop="static" data-bs-keyboard="false"  tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
       <form action="/Admin/UserRoles/Edit" 
    autocomplete="off" class="modal-dialog modal-lg" 
    data-ajax="true" data-ajax-loading="#loader" data-ajax-loading-duration="100" data-ajax-method="POST" data-ajax-success="CloseModel" 
    enctype="multipart/form-data" id="form0" 
    method="post" 
    novalidate="novalidate">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.RoleID)
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">@EduUruk.Models.Resources.SysModelRes.EditTitle</h4>
                <button type="button" class="close" data-bs-dismiss="modal"  aria-hidden="true">×</button>
            </div>
            <div class="modal-body">               
                <div class="row">
                              <div class="form-group col-md-6">
                                        <label class="text-bold-900">@Html.LabelFor(model => model.ArabicRoleName, htmlAttributes: new { @class = "control-label" }) </label>
                                        <small class="text-danger">*</small>
                                        <div class="position-relative has-icon-left">
                                            <input type="text" name="ArabicRoleName" class="form-control" />
                                            @*@Html.EditorFor(model => model.ArabicRoleName, new { htmlAttributes = new { @class = "form-control" } })*@
                                            <div class="form-control-position">
                                               
                                            </div>
                                        </div>
                                        @*@Html.ValidationMessageFor(model => model.ArabicRoleName, "", new { @class = "text-danger" })*@
                                    </div>
      <div class="form-group col-md-6">
                                        <label class="text-bold-900">@Html.LabelFor(model => model.EnglishRoleName, htmlAttributes: new { @class = "control-label" }) </label>
                                        <small class="text-danger">*</small>
                                        <div class="position-relative has-icon-left">
                                            @Html.EditorFor(model => model.EnglishRoleName, new { htmlAttributes = new { @class = "form-control" } })
                                            
                                            <div class="form-control-position">
                                               
                                            </div>
                                        </div>
                                        @Html.ValidationMessageFor(model => model.EnglishRoleName, "", new { @class = "text-danger" })
                                    </div>
          
                     
                </div>
                 
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-default waves-effect waves-light">
                    <i class="fa fa-check"></i>
                    @EduUruk.Models.Resources.GeneralRes.BtnEditText
                </button>
                <button type="button" id="BtnClose" class="btn btn-secondary waves-effect" data-bs-dismiss="modal" >
                    <i class="icon-action-undo"></i>
                    @EduUruk.Models.Resources.GeneralRes.BtnCancelText
                </button>
            </div>
        </div>
        <!-- /.modal-content -->
    </form> <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
