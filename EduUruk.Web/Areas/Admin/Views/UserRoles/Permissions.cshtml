@model EduUruk.Models.ViewModels.RoleForm
<!-- modal -->
<div id="AccessModal" class="modal fade"  data-bs-backdrop="static" data-bs-keyboard="false"  tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <form action="/Admin/UserRoles/Permissions" 
    autocomplete="off" class="modal-dialog modal-lg" 
    data-ajax="true" data-ajax-loading="#loader" data-ajax-loading-duration="100" data-ajax-method="POST" data-ajax-success="CloseModel" 
    enctype="multipart/form-data" id="form0" 
    method="post" 
    novalidate="novalidate">
   
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.RoleID)
        @Html.HiddenFor(model => model.ArabicRoleName)
        @Html.HiddenFor(model => model.EnglishRoleName)
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title" id="myModalLabel">
                    <span style="color:red;font-weight:bold">
                        @EduUruk.Models.Resources.SysModelRes.GroupName :
                        @Model.ArabicRoleName
                    </span>
                </h6>
                <button type="button" class="close" data-bs-dismiss="modal"  aria-hidden="true">×</button>
            </div>
            <div class="modal-body">

                <div class="row">
                    <div class="col-sm-12 col-xs-12">
                        <table class="table table-actions-bar scroll-dt table-striped table-bordered dt-responsive nowrap" width="100%" data-rel="scroll-table">
                            <thead>
                                <tr>
                                    <th>
                                        <span style="color:red;font-weight:bold; font-size: 15px;  display: block; margin-bottom: 11px; text-align: center">
                                            @Html.DisplayNameFor(model => model.Permissions.FirstOrDefault().Page.PageName)
                                        </span>
                                    </th>
                                    <th>
                                        <label class="">
                                            <input id="checkboxView" class="ace input-lg" data-rel="check-all" data-target="CanSelect" type="checkbox">
                                            <span style="color:black;" class="lbl bigger-120">
                                                @Html.DisplayNameFor(model => model.Permissions.FirstOrDefault().CanSelect)
                                            </span>
                                        </label>
                                    </th>
                                    <th>
                                        <label class="">
                                            <input id="checkboxCreate" class="ace input-lg" data-rel="check-all" data-target="CanCreate" type="checkbox">
                                            <span style="color:black;" class="lbl bigger-120">
                                                @Html.DisplayNameFor(model => model.Permissions.FirstOrDefault().CanCreate)
                                            </span>
                                        </label>
                                    </th>
                                    <th>
                                        <label class="">
                                            <input id="checkboxEdit" class="ace input-lg" data-rel="check-all" data-target="CanEdit" type="checkbox">
                                            <span style="color:black;" class="lbl bigger-120">
                                                @Html.DisplayNameFor(model => model.Permissions.FirstOrDefault().CanEdit)
                                            </span>
                                        </label>
                                    </th>
                                    <th>
                                        <label class="">
                                            <input id="checkboxDelete" class="ace input-lg" data-rel="check-all" data-target="CanDelete" type="checkbox">
                                            <span style="color:black;" class="lbl bigger-120">
                                                @Html.DisplayNameFor(model => model.Permissions.FirstOrDefault().CanDelete)
                                            </span>
                                        </label>
                                    </th>
                                    <th>
                                        <label class="">
                                            <input id="checkboxActive" class="ace input-lg" data-rel="check-all" data-target="CanActive" type="checkbox">
                                            <span style="color:black;" class="lbl bigger-120">
                                                @Html.DisplayNameFor(model => model.Permissions.FirstOrDefault().CanActive)
                                            </span>
                                        </label>
                                    </th>
                                    <th>
                                        <label class="">
                                            <input id="checkboxPrint" class="ace input-lg" data-rel="check-all" data-target="CanPrint" type="checkbox">
                                            <span style="color:black;" class="lbl bigger-120">
                                                @Html.DisplayNameFor(model => model.Permissions.FirstOrDefault().CanPrint)
                                            </span>
                                        </label>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Permissions.Count; i++)
                                {
                                    <tr>
                                        <td>
                                            @Html.HiddenFor(modelItem => Model.Permissions[i].PageID)
                                            @Html.HiddenFor(modelItem => Model.Permissions[i].RoleId)
                                            <label class="">
                                                <input id="checkboxView" class="ace input-lg" data-rel="check-row" data-target="Permissions_@i" type="checkbox">
                                                <span style="color:red;font-weight:bold; font-size: 13px;" class="lbl bigger-120">
                                                    @Html.DisplayFor(modelItem => Model.Permissions[i].Page.PageName)
                                                </span>


                                            </label>

                                        </td>
                                        <td>
                                            <label class="">

                                                @Html.CheckBoxFor(modelItem => Model.Permissions[i].CanSelect, htmlAttributes: new { @class = "ace input-lg" })

                                                <span class="lbl bigger-120"></span>
                                            </label>

                                        </td>
                                        <td>
                                            <label class="">
                                                @Html.CheckBoxFor(modelItem => Model.Permissions[i].CanCreate, htmlAttributes: new { @class = "ace input-lg" })
                                                <span class="lbl bigger-120"></span>
                                            </label>
                                        </td>
                                        <td>
                                            <label class="">
                                                @Html.CheckBoxFor(modelItem => Model.Permissions[i].CanEdit, htmlAttributes: new { @class = "ace input-lg" })
                                                <span class="lbl bigger-120"></span>
                                            </label>
                                        </td>
                                        <td>
                                            <label class="">
                                                @Html.CheckBoxFor(modelItem => Model.Permissions[i].CanDelete, htmlAttributes: new { @class = "ace input-lg" })
                                                <span class="lbl bigger-120"></span>
                                            </label>
                                        </td>
                                        <td>
                                            <label class="">
                                                @Html.CheckBoxFor(modelItem => Model.Permissions[i].CanActive, htmlAttributes: new { @class = "ace input-lg" })
                                                <span class="lbl bigger-120"></span>
                                            </label>
                                        </td>
                                        <td>
                                            <label class="">
                                                @Html.CheckBoxFor(modelItem => Model.Permissions[i].CanPrint, htmlAttributes: new { @class = "ace input-lg" })
                                                <span class="lbl bigger-120"></span>
                                            </label>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-default waves-effect waves-light">
                    <i class="fa fa-check"></i>
                    @EduUruk.Models.Resources.GeneralRes.BtnEditText
                </button>
                <button type="button" id="BtnClose" class="btn btn-secondary waves-effect" data-bs-dismiss="modal" >
                    <i class="icon-action-undo"></i>
                    @EduUruk.Models.Resources.GeneralRes.BtnCancelText
                </button>
            </div>
        </div>
        <!-- /.modal-content -->
    </form> <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
