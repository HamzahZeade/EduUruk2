@section Scripts {

    <script type="text/javascript">
          function FirewithImg() {
            fileUploadFileName = $('[data-rel="imgControl"]').val();
            FireAccess();
          }

        $(document).ready(function () {
            var tableSettings = {
                url: "/admin/PagesGroups/GetCustoms",
                language: "@EduUruk.Models.Resources.GeneralRes.Language",
                sorting: [[0, 'asc']],
                columns: [
                   {
                       'width': "10%",
                       'data': "id",
                       'name': "GroupID",
                       'title': "@EduUruk.Models.Resources.SysModelRes.GroupID"
                   },
                   {
                       'width': "65%",
                       'data': "name",
                       'name': "@EduUruk.Models.Resources.SysModelRes.GroupNameTextField",
                       'title': "@EduUruk.Models.Resources.SysModelRes.GroupName",
                   },
                   {
                       'width': "25%",
                       'orderable': false,
                       'data': 'id',
                       'render': function (id, type, row) {
                           var command = '<div class="action-buttons">';

                           command += '<a class="btn btn-info btn-sm" data-ajax="true" data-ajax-loading="#loader" data-ajax-loading-duration="100" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-success="FireAccess" data-ajax-update="#AccessSection" href="/Admin/PagesGroups/Edit/' + id + '" ><i class="icon-edit"></i> تعديل </a> ';
                             //<i class="md md-edit"></i></a>';

                           command += '<a class="btn btn-danger btn-sm" data-ajax="true" data-ajax-loading="#loader" data-ajax-loading-duration="100" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-success="FireAccess" data-ajax-update="#AccessSection" href="/Admin/PagesGroups/Delete/' + id + '" ><i class="icon-trash"></i> حذف</a>';

                           command += '</div>';
                           return command;
                       }
                   }
                ]
            };
            setTable(tableSettings);
        });
    </script>

}



